#include <iostream>
using namespace std;

void drawCity() {
    // Заголовок города
    cout << "       [ARKANSUS - 1930s TOWN]       " << endl;
    cout << "--------------------------------------" << endl;

    // Рисуем мэрии
    cout << "      [MAYOR'S OFFICE]                " << endl;
    cout << "        _________                     " << endl;
    cout << "       |         |                    " << endl;
    cout << "       |  [ ] [ ]|                    " << endl;
    cout << "       |_________|                    " << endl;
    cout << "          |||||                       " << endl;
    cout << "          |||||                       " << endl;

    // Рисуем жилую зону
    cout << "      [RESIDENTIAL AREA]              " << endl;
    cout << "   ______     ______                 " << endl;
    cout << "  |      |   |      |                " << endl;
    cout << "  | [ ]  |   | [ ]  |                " << endl;
    cout << "  |______|   |______|                " << endl;
    cout << "      ||         ||                  " << endl;
    cout << "   ______     ______                 " << endl;
    cout << "  |      |   |      |                " << endl;
    cout << "  | [ ]  |   | [ ]  |                " << endl;
    cout << "  |______|   |______|                " << endl;

    // Рисуем дорогу
    cout << "         [ROAD]                       " << endl;
    cout << "        ============================== " << endl;
    cout << "        ||||||||||||||||||||||||||||| " << endl;

    // Рисуем шахты
    cout << "      [COAL MINE]                     " << endl;
    cout << "        _________                     " << endl;
    cout << "       /         \\                    " << endl;
    cout << "      /  [   ]    \\                   " << endl;
    cout << "     /___________\\                   " << endl;

    // Рисуем магазины
    cout << "      [SHOPS]                         " << endl;
    cout << "   _______     _______               " << endl;
    cout << "  |       |   |       |              " << endl;
    cout << "  | [ ]   |   | [ ]   |              " << endl;
    cout << "  |_______|   |_______|              " << endl;

    cout << "--------------------------------------" << endl;
}

int main() {
    drawCity();
    return 0;
}
